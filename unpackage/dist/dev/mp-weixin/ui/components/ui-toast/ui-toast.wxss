.ui-toast-box {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 880;
  opacity: 0;
  outline: 0;
  text-align: center;
  -webkit-transform: scale(1);
          transform: scale(1);
  -webkit-backface-visibility: hidden;
          backface-visibility: hidden;
  -webkit-perspective: 1000px;
          perspective: 1000px;
  pointer-events: none;
}
.ui-toast-box .ui-toast {
  position: relative;
  display: inline-block;
  vertical-align: middle;
  margin-left: auto;
  margin-right: auto;
  background-color: var(--ui-BG);
  border-radius: 5px;
  overflow: hidden;
  text-align: left;
  color: var(--ui-TC);
  padding: 0.5em 1em;
  border-radius: 10rpx;
  max-width: 90vw;
  max-height: 20vh;
  overflow: hidden;
}
.ui-toast-box .ui-toast .ui-toast-title {
  padding-top: 10px;
}
.ui-toast-box .ui-toast .ui-toast-content {
  padding: 5px 25px 25px;
  font-size: 16px;
  color: var(--ui-TC-2);
}
.ui-toast-box .ui-toast .ui-toast-content:first-child {
  padding: 25px;
  color: var(--ui-TC);
}
.ui-toast-box .ui-toast .ui-toast-option {
  display: -webkit-box;
  display: flex;
  padding: 7.5px 0;
  -webkit-box-pack: center;
          justify-content: center;
}
.ui-toast-box .ui-toast .ui-toast-option view {
  -webkit-box-flex: 1;
          flex: 1;
  padding: 7.5px 0;
  text-align: center;
}
.ui-toast-box .ui-toast.bg-none .ui-toast-option {
  background: transparent;
  color: #ffffff;
}
.ui-toast-box .ui-toast.bg-none .ui-toast-option .ui-toast-btn {
  border: 1px solid #ffffff;
  border-radius: 500px;
  margin: 0 20px;
  color: #ffffff !important;
}
.ui-toast-box::before {
  content: '\200B';
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}
.ui-toast-box.show {
  opacity: 1;
  -webkit-transform: scale(1);
          transform: scale(1);
  -webkit-transition: 0.3s;
  transition: 0.3s;
  overflow-x: hidden;
  overflow-y: auto;
  pointer-events: auto;
}
.ui-toast-box.show.bg-none {
  pointer-events: none;
}
.ui-toast-box.show.bg-none .ui-dialog {
  pointer-events: auto;
}
.ui-toast-box.bottom {
  margin-bottom: -500px;
}
.ui-toast-box.bottom::before {
  vertical-align: bottom;
}
.ui-toast-box.bottom .ui-dialog {
  width: 100%;
  border-radius: 0;
  padding-bottom: calc(env(safe-area-inset-bottom) / 4 * 3);
}
.ui-toast-box.bottom.show {
  margin-bottom: 0;
}
.ui-toast-box.top {
  margin-top: -500px;
}
.ui-toast-box.top::before {
  vertical-align: top;
}
.ui-toast-box.top .ui-dialog {
  width: 100%;
  border-radius: 0;
}
.ui-toast-box.top.show {
  margin-top: 0;
}


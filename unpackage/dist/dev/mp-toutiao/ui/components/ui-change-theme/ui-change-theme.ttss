.mobile-phone {
  width: 85px;
  height: 152.5px;
  border-radius: 10px;
  padding: 5px 7.5px;
  background-color: #ffffff;
  margin-bottom: 10px;
}
.mobile-phone:after {
  display: none;
}
.mobile-phone.cur:after {
  display: block;
  border: 5px solid var(--ui-BG-Main) !important;
  border-radius: 20px;
}
.mobile-phone .ui-BG-Main {
  height: 50px;
  margin-top: 10px;
  background-color: rgba(122, 122, 122, 0.5) !important;
}
.mobile-phone.cur .ui-BG-Main {
  background-color: var(--ui-BG-Main) !important;
}
.mobile-phone .bg-gray,
.mobile-phone .bg-dark-4 {
  height: 20px;
  margin-top: 5px;
}
.mobile-phone.dark {
  background-color: #232323;
}

